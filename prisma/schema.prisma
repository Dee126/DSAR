generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Enums ──────────────────────────────────────────────────────────────────

enum UserRole {
  SUPER_ADMIN
  TENANT_ADMIN
  DPO
  CASE_MANAGER
  ANALYST
  AUDITOR
  CONTRIBUTOR
  READ_ONLY
}

enum DSARType {
  ACCESS
  ERASURE
  RECTIFICATION
  RESTRICTION
  PORTABILITY
  OBJECTION
}

enum CaseStatus {
  NEW
  IDENTITY_VERIFICATION
  INTAKE_TRIAGE
  DATA_COLLECTION
  REVIEW_LEGAL
  RESPONSE_PREPARATION
  RESPONSE_SENT
  CLOSED
  REJECTED
}

enum CasePriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum TaskStatus {
  OPEN
  IN_PROGRESS
  BLOCKED
  DONE
}

enum DocumentClassification {
  PUBLIC
  INTERNAL
  CONFIDENTIAL
  RESTRICTED
}

enum CommunicationDirection {
  INBOUND
  OUTBOUND
}

enum CommunicationChannel {
  EMAIL
  LETTER
  PORTAL
  PHONE
}

enum DataCollectionStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
  NOT_APPLICABLE
}

enum LegalReviewStatus {
  PENDING
  IN_REVIEW
  APPROVED
  REJECTED
  CHANGES_REQUESTED
}

enum IntegrationProvider {
  // Phase 1 — Microsoft (all via Graph API)
  M365              // Entra ID / User Directory
  EXCHANGE_ONLINE   // Exchange Online mailbox search
  SHAREPOINT        // SharePoint Online sites/drives
  ONEDRIVE          // OneDrive for Business
  // Phase 2 — High business value
  GOOGLE_WORKSPACE
  SALESFORCE
  SERVICENOW
  // Phase 3 — Customer-dependent
  ATLASSIAN_JIRA
  ATLASSIAN_CONFLUENCE
  WORKDAY
  SAP_SUCCESSFACTORS
  OKTA
  // Phase 4 — Cloud providers (DSAR-relevant only if PII in storage/logs)
  AWS
  AZURE
  GCP
}

enum IntegrationStatus {
  ENABLED
  DISABLED
}

enum CopilotRunStatus {
  DRAFT
  QUEUED
  RUNNING
  COMPLETED
  FAILED
  CANCELED
}

enum CopilotQueryStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  SKIPPED
}

enum FindingSeverity {
  INFO
  WARNING
  CRITICAL
}

enum DataCategory {
  IDENTIFICATION          // Name, DOB, photo, ID numbers
  CONTACT                 // Email, phone, address
  CONTRACT                // Account info, customer number
  PAYMENT                 // IBAN, credit card, billing
  COMMUNICATION           // Emails, messages, call logs
  HR                      // Salary, evaluations, contracts
  CREDITWORTHINESS        // Credit score, debts, transactions
  ONLINE_TECHNICAL        // IP, cookies, device IDs, logs
  HEALTH                  // Medical, disability, treatments (Art. 9)
  RELIGION                // Religious beliefs (Art. 9)
  UNION                   // Trade union membership (Art. 9)
  POLITICAL_OPINION       // Political opinions (Art. 9)
  OTHER_SPECIAL_CATEGORY  // Biometric, ethnic, sexual orientation, criminal (Art. 9)
  OTHER                   // Unclassified
}

enum LegalApprovalStatus {
  NOT_REQUIRED
  REQUIRED
  PENDING
  APPROVED
  REJECTED
}

enum QueryIntent {
  DATA_LOCATION
  DSAR_SUMMARY
  CATEGORY_OVERVIEW
  RISK_CHECK
  EXPORT_PREP
  OTHER
}

enum EvidenceItemType {
  EMAIL
  FILE
  RECORD
  CALENDAR
  CONTACT
  TICKET
  OTHER
}

enum ContentHandling {
  NONE
  METADATA_ONLY
  CONTENT_STORED
}

enum PrimaryIdentifierType {
  EMAIL
  UPN
  OBJECT_ID
  CUSTOMER_ID
  EMPLOYEE_ID
  PHONE
  IBAN
  OTHER
}

enum CopilotSummaryType {
  LOCATION_OVERVIEW
  CATEGORY_OVERVIEW
  DSAR_DRAFT
  RISK_SUMMARY
}

enum ExportType {
  ZIP
  DOCX
  XLSX
  PDF
  JSON
  CSV
}

enum ExportLegalGateStatus {
  BLOCKED
  ALLOWED
}

enum IntegrationHealthStatus {
  HEALTHY
  DEGRADED
  FAILED
  NOT_CONFIGURED
}

// ─── Models ─────────────────────────────────────────────────────────────────

model Tenant {
  id              String   @id @default(uuid())
  name            String
  slaDefaultDays  Int      @default(30)
  dueSoonDays     Int      @default(7)
  retentionDays   Int      @default(365)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  users              User[]
  dataSubjects       DataSubject[]
  cases              DSARCase[]
  tasks              Task[]
  documents          Document[]
  comments           Comment[]
  auditLogs          AuditLog[]
  stateTransitions   DSARStateTransition[]
  systems            System[]
  communicationLogs  CommunicationLog[]
  dataCollectionItems DataCollectionItem[]
  legalReviews       LegalReview[]
  integrations       Integration[]
  copilotRuns        CopilotRun[]
  copilotQueries     CopilotQuery[]
  identityProfiles   IdentityProfile[]
  evidenceItems      EvidenceItem[]
  findings           Finding[]
  detectorResults    DetectorResult[]
  copilotSummaries   CopilotSummary[]
  exportArtifacts    ExportArtifact[]
  governanceSettings CopilotGovernanceSettings?
  legalHolds         LegalHold[]
  redactionSuggestions RedactionSuggestion[]
  breakGlassEvents   BreakGlassEvent[]
  exportApprovals    ExportApproval[]
  caseTeamMembers    CaseTeamMember[]

  @@map("tenants")
}

model User {
  id            String    @id @default(uuid())
  tenantId      String
  email         String
  name          String
  passwordHash  String
  role          UserRole  @default(READ_ONLY)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?

  tenant             Tenant              @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdCases       DSARCase[]          @relation("CaseCreatedBy")
  assignedCases      DSARCase[]          @relation("CaseAssignedTo")
  assignedTasks      Task[]
  uploadedDocuments  Document[]
  comments           Comment[]
  auditLogs          AuditLog[]
  stateTransitions   DSARStateTransition[]
  legalReviews       LegalReview[]       @relation("LegalReviewReviewer")
  ownedIntegrations  Integration[]       @relation("IntegrationOwner")
  assignedCollections DataCollectionItem[] @relation("DataCollectionAssignee")
  copilotRuns           CopilotRun[]        @relation("CopilotRunCreatedBy")
  copilotRunApprovals   CopilotRun[]        @relation("CopilotRunLegalApprover")
  copilotSummaries      CopilotSummary[]    @relation("CopilotSummaryCreatedBy")
  exportArtifacts       ExportArtifact[]    @relation("ExportArtifactCreatedBy")
  legalHoldsEnabled     LegalHold[]         @relation("LegalHoldEnabledBy")
  legalHoldsDisabled    LegalHold[]         @relation("LegalHoldDisabledBy")
  redactionReviews      RedactionSuggestion[] @relation("RedactionReviewedBy")
  breakGlassEventsActor BreakGlassEvent[]   @relation("BreakGlassActor")
  breakGlassEventsAck   BreakGlassEvent[]   @relation("BreakGlassAcknowledgedBy")
  exportApprovals       ExportApproval[]    @relation("ExportApprovalApprover")
  caseTeamMemberships   CaseTeamMember[]    @relation("CaseTeamMember")

  @@unique([tenantId, email])
  @@index([tenantId])
  @@map("users")
}

model DataSubject {
  id                String   @id @default(uuid())
  tenantId          String
  fullName          String
  email             String?
  phone             String?
  address           String?
  preferredLanguage String?  @default("en")
  identifiers       Json?
  notes             String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  tenant Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  cases  DSARCase[]

  @@index([tenantId])
  @@index([tenantId, email])
  @@map("data_subjects")
}

model DSARCase {
  id                String       @id @default(uuid())
  tenantId          String
  caseNumber        String
  type              DSARType
  status            CaseStatus   @default(NEW)
  priority          CasePriority @default(MEDIUM)
  lawfulBasis       String?
  receivedAt        DateTime     @default(now())
  dueDate           DateTime
  extendedDueDate   DateTime?
  extensionReason   String?
  channel           String?
  requesterType     String?
  description       String?
  identityVerified  Boolean      @default(false)
  tags              Json?
  deletedAt         DateTime?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  dataSubjectId    String
  createdByUserId  String
  assignedToUserId String?

  tenant          Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  dataSubject     DataSubject  @relation(fields: [dataSubjectId], references: [id])
  createdBy       User         @relation("CaseCreatedBy", fields: [createdByUserId], references: [id])
  assignedTo      User?        @relation("CaseAssignedTo", fields: [assignedToUserId], references: [id])

  stateTransitions    DSARStateTransition[]
  tasks               Task[]
  documents           Document[]
  comments            Comment[]
  communicationLogs   CommunicationLog[]
  dataCollectionItems DataCollectionItem[]
  legalReviews        LegalReview[]
  copilotRuns         CopilotRun[]
  identityProfiles    IdentityProfile[]
  legalHolds          LegalHold[]
  teamMembers         CaseTeamMember[]

  @@unique([tenantId, caseNumber])
  @@index([tenantId])
  @@index([tenantId, status])
  @@index([tenantId, assignedToUserId])
  @@map("dsar_cases")
}

model DSARStateTransition {
  id             String     @id @default(uuid())
  tenantId       String
  caseId         String
  fromStatus     CaseStatus
  toStatus       CaseStatus
  changedByUserId String
  changedAt      DateTime   @default(now())
  reason         String
  metadata       Json?

  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case      DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  changedBy User     @relation(fields: [changedByUserId], references: [id])

  @@index([tenantId, caseId])
  @@map("dsar_state_transitions")
}

model Task {
  id             String     @id @default(uuid())
  tenantId       String
  caseId         String
  title          String
  description    String?
  status         TaskStatus @default(OPEN)
  dueDate        DateTime?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  systemId       String?

  assigneeUserId String?

  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case     DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  assignee User?    @relation(fields: [assigneeUserId], references: [id])
  system   System?  @relation(fields: [systemId], references: [id])

  @@index([tenantId])
  @@index([tenantId, caseId])
  @@index([tenantId, assigneeUserId])
  @@map("tasks")
}

model Document {
  id              String                  @id @default(uuid())
  tenantId        String
  caseId          String
  filename        String
  contentType     String
  storageKey      String
  size            Int
  hash            String
  classification  DocumentClassification  @default(INTERNAL)
  tags            Json?
  deletedAt       DateTime?
  uploadedAt      DateTime                @default(now())

  uploadedByUserId String

  tenant     Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case       DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  uploadedBy User     @relation(fields: [uploadedByUserId], references: [id])

  @@index([tenantId])
  @@index([tenantId, caseId])
  @@map("documents")
}

model Comment {
  id           String   @id @default(uuid())
  tenantId     String
  caseId       String
  authorUserId String
  body         String
  createdAt    DateTime @default(now())

  tenant Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case   DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  author User     @relation(fields: [authorUserId], references: [id])

  @@index([tenantId, caseId])
  @@map("comments")
}

model AuditLog {
  id          String   @id @default(uuid())
  tenantId    String?
  actorUserId String?
  action      String
  entityType  String
  entityId    String?
  createdAt   DateTime @default(now())
  ip          String?
  userAgent   String?
  details     Json?

  tenant Tenant? @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  actor  User?   @relation(fields: [actorUserId], references: [id])

  @@index([tenantId])
  @@index([tenantId, entityType, entityId])
  @@index([tenantId, actorUserId])
  @@map("audit_logs")
}

model System {
  id           String   @id @default(uuid())
  tenantId     String
  name         String
  description  String?
  owner        String?
  contactEmail String?
  tags         Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  tenant              Tenant               @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  tasks               Task[]
  dataCollectionItems DataCollectionItem[]

  @@index([tenantId])
  @@map("systems")
}

// ─── New Models ─────────────────────────────────────────────────────────────

model CommunicationLog {
  id          String                 @id @default(uuid())
  tenantId    String
  caseId      String
  direction   CommunicationDirection
  channel     CommunicationChannel
  subject     String?
  body        String
  attachments Json?
  sentAt      DateTime               @default(now())
  createdAt   DateTime               @default(now())

  tenant Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case   DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)

  @@index([tenantId, caseId])
  @@map("communication_logs")
}

model DataCollectionItem {
  id                String               @id @default(uuid())
  tenantId          String
  caseId            String
  systemId          String?
  integrationId     String?
  systemLabel       String?
  querySpec         Json?
  status            DataCollectionStatus @default(PENDING)
  findingsSummary   String?
  recordsFound      Int?
  resultMetadata    Json?
  assignedToUserId  String?
  startedAt         DateTime?
  completedAt       DateTime?
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt

  tenant      Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case        DSARCase     @relation(fields: [caseId], references: [id], onDelete: Cascade)
  system      System?      @relation(fields: [systemId], references: [id])
  integration Integration? @relation(fields: [integrationId], references: [id])
  assignedTo  User?        @relation("DataCollectionAssignee", fields: [assignedToUserId], references: [id])

  @@index([tenantId, caseId])
  @@map("data_collection_items")
}

model LegalReview {
  id                String            @id @default(uuid())
  tenantId          String
  caseId            String
  status            LegalReviewStatus @default(PENDING)
  issues            String?
  exemptionsApplied Json?
  redactions        String?
  notes             String?
  reviewerUserId    String?
  approvedAt        DateTime?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case     DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  reviewer User?    @relation("LegalReviewReviewer", fields: [reviewerUserId], references: [id])

  @@index([tenantId, caseId])
  @@map("legal_reviews")
}

model Integration {
  id                 String                  @id @default(uuid())
  tenantId           String
  provider           IntegrationProvider
  name               String
  status             IntegrationStatus       @default(DISABLED)
  config             Json?
  secretRef          String?
  healthStatus       IntegrationHealthStatus @default(NOT_CONFIGURED)
  lastHealthCheckAt  DateTime?
  lastSuccessAt      DateTime?
  lastError          String?
  ownerUserId        String?
  createdAt          DateTime                @default(now())
  updatedAt          DateTime                @updatedAt

  tenant              Tenant               @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  owner               User?                @relation("IntegrationOwner", fields: [ownerUserId], references: [id])
  dataCollectionItems DataCollectionItem[]
  copilotQueries      CopilotQuery[]
  evidenceItems       EvidenceItem[]      @relation("EvidenceIntegration")

  @@index([tenantId])
  @@index([tenantId, status])
  @@map("integrations")
}

// ─── Privacy Copilot Models ──────────────────────────────────────────────────

model CopilotRun {
  id                      String              @id @default(uuid())
  tenantId                String
  caseId                  String
  createdByUserId         String
  status                  CopilotRunStatus    @default(DRAFT)
  justification           String              // Mandatory reason (e.g. "DSAR Art. 15 request – …")
  scopeSummary            String?             // Human-readable scope (e.g. "M365 Mailbox + SharePoint Finance Site")
  providerSelection       Json?               // JSON array: which integrations/workloads are included
  resultSummary           String?             // Short summary text (evidence-based, later LLM-assisted)
  errorDetails            String?             // Error info if FAILED
  containsSpecialCategory Boolean             @default(false)
  legalApprovalStatus     LegalApprovalStatus @default(NOT_REQUIRED)
  legalApprovedByUserId   String?
  legalApprovedAt         DateTime?
  retentionDeleteAt       DateTime?           // Auto-delete timestamp based on tenant settings
  totalFindings           Int                 @default(0)
  totalEvidenceItems      Int                 @default(0)
  startedAt               DateTime?
  completedAt             DateTime?
  metadata                Json?
  createdAt               DateTime            @default(now())
  updatedAt               DateTime            @updatedAt

  tenant          Tenant             @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case            DSARCase           @relation(fields: [caseId], references: [id], onDelete: Cascade)
  createdBy       User               @relation("CopilotRunCreatedBy", fields: [createdByUserId], references: [id])
  legalApprovedBy User?              @relation("CopilotRunLegalApprover", fields: [legalApprovedByUserId], references: [id])
  queries         CopilotQuery[]
  evidenceItems   EvidenceItem[]
  findings        Finding[]
  summaries              CopilotSummary[]
  exports                ExportArtifact[]
  redactionSuggestions   RedactionSuggestion[]

  @@index([tenantId, caseId])
  @@index([tenantId, status])
  @@map("copilot_runs")
}

model CopilotQuery {
  id                  String             @id @default(uuid())
  tenantId            String
  caseId              String
  runId               String
  createdByUserId     String
  queryText           String             // Freetext query (e.g. "Which data exists for …")
  queryIntent         QueryIntent        @default(DATA_LOCATION)
  subjectIdentityId   String?            // Links to IdentityProfile
  executionMode       ContentHandling    @default(METADATA_ONLY)
  constraints         Json?              // Optional: timeRange, systems included/excluded
  // Execution fields (per-integration query)
  integrationId       String?
  provider            String?
  querySpec           Json?              // Full QuerySpec for connector execution
  status              CopilotQueryStatus @default(PENDING)
  recordsFound        Int?
  errorMessage        String?
  executionMs         Int?
  startedAt           DateTime?
  completedAt         DateTime?
  createdAt           DateTime           @default(now())

  tenant          Tenant           @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  run             CopilotRun       @relation(fields: [runId], references: [id], onDelete: Cascade)
  integration     Integration?     @relation(fields: [integrationId], references: [id])
  subjectIdentity IdentityProfile? @relation(fields: [subjectIdentityId], references: [id])
  evidenceItems   EvidenceItem[]

  @@index([tenantId, runId])
  @@map("copilot_queries")
}

model IdentityProfile {
  id                      String               @id @default(uuid())
  tenantId                String
  caseId                  String
  displayName             String               // e.g. "Max Mustermann"
  primaryIdentifierType   PrimaryIdentifierType @default(EMAIL)
  primaryIdentifierValue  String               // e.g. "max@acme.com"
  alternateIdentifiers    Json                 // Array of { type, value, confidence, source }
  confidenceScore         Int                  @default(0) // 0..100
  createdByUserId         String?
  createdAt               DateTime             @default(now())
  updatedAt               DateTime             @updatedAt

  tenant   Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case     DSARCase       @relation(fields: [caseId], references: [id], onDelete: Cascade)
  queries  CopilotQuery[]

  @@unique([tenantId, caseId])
  @@map("identity_profiles")
}

model EvidenceItem {
  id                String          @id @default(uuid())
  tenantId          String
  caseId            String
  runId             String
  queryId           String?
  integrationId     String?
  provider          String          // e.g. "M365", "EXCHANGE_ONLINE"
  workload          String?         // e.g. "EXCHANGE", "SHAREPOINT"
  itemType          EvidenceItemType @default(OTHER)
  externalRef       String?         // External system ID (Graph item id, etc.)
  location          String          // e.g. "Mailbox:user@acme.com/Inbox"
  title             String          // e.g. email subject or filename
  createdAtSource   DateTime?
  modifiedAtSource  DateTime?
  owners            Json?           // { createdBy, modifiedBy, sender, etc. }
  metadata          Json?           // Structured metadata (NO full content by default)
  contentHandling   ContentHandling @default(METADATA_ONLY)
  linkedDocumentId  String?         // Optional: if exported/stored as Document
  sensitivityScore  Int?            // 0..100
  createdAt         DateTime        @default(now())

  tenant      Tenant           @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  run         CopilotRun       @relation(fields: [runId], references: [id], onDelete: Cascade)
  query       CopilotQuery?    @relation(fields: [queryId], references: [id])
  integration Integration?     @relation("EvidenceIntegration", fields: [integrationId], references: [id])
  detectorResults DetectorResult[]

  @@index([tenantId, runId])
  @@index([tenantId, caseId])
  @@map("evidence_items")
}

model DetectorResult {
  id                               String   @id @default(uuid())
  tenantId                         String
  caseId                           String
  runId                            String
  evidenceItemId                   String
  detectorType                     String   // "REGEX", "PDF_METADATA", "OCR", "IMAGE_MODEL", "LLM_CLASSIFIER"
  detectedElements                 Json     // Array of { elementType, confidence, snippetPreview, offsets? }
  detectedCategories               Json     // Array of { category: DataCategory, confidence }
  containsSpecialCategorySuspected Boolean  @default(false)
  createdAt                        DateTime @default(now())

  tenant       Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  evidenceItem EvidenceItem @relation(fields: [evidenceItemId], references: [id], onDelete: Cascade)

  @@index([tenantId, evidenceItemId])
  @@map("detector_results")
}

model Finding {
  id                              String          @id @default(uuid())
  tenantId                        String
  caseId                          String
  runId                           String
  dataCategory                    DataCategory
  severity                        FindingSeverity @default(INFO)
  confidence                      Float           @default(0)
  summary                         String          // Short text; references evidence, no LLM hallucination
  evidenceItemIds                 String[]        // References to EvidenceItem IDs
  containsSpecialCategory         Boolean         @default(false)
  containsThirdPartyDataSuspected Boolean         @default(false)
  requiresLegalReview             Boolean         @default(false)
  createdAt                       DateTime        @default(now())

  tenant Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  run    CopilotRun @relation(fields: [runId], references: [id], onDelete: Cascade)

  @@index([tenantId, runId])
  @@index([tenantId, caseId])
  @@map("findings")
}

model CopilotSummary {
  id                    String             @id @default(uuid())
  tenantId              String
  caseId                String
  runId                 String
  createdByUserId       String
  summaryType           CopilotSummaryType
  content               String             // Generated text
  evidenceSnapshotHash  String             // Hash to verify summary matches evidence state
  disclaimerIncluded    Boolean            @default(true)
  createdAt             DateTime           @default(now())

  tenant    Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  run       CopilotRun @relation(fields: [runId], references: [id], onDelete: Cascade)
  createdBy User       @relation("CopilotSummaryCreatedBy", fields: [createdByUserId], references: [id])

  @@index([tenantId, runId])
  @@map("copilot_summaries")
}

model ExportArtifact {
  id              String                @id @default(uuid())
  tenantId        String
  caseId          String
  runId           String
  documentId      String?               // Reference to stored Document
  exportType      ExportType            @default(JSON)
  status          String                @default("PENDING") // PENDING, GENERATING, COMPLETED, FAILED
  legalGateStatus ExportLegalGateStatus @default(ALLOWED)
  createdByUserId String
  createdAt       DateTime              @default(now())

  tenant    Tenant          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  run       CopilotRun      @relation(fields: [runId], references: [id], onDelete: Cascade)
  createdBy User            @relation("ExportArtifactCreatedBy", fields: [createdByUserId], references: [id])
  approvals ExportApproval[]

  @@index([tenantId, runId])
  @@map("export_artifacts")
}

// ─── Governance & Safety Models ─────────────────────────────────────────────

enum RedactionStatus {
  SUGGESTED
  APPROVED
  REJECTED
}

enum BreakGlassEventType {
  RATE_LIMIT_EXCEEDED
  ANOMALY_MANY_RUNS
  ANOMALY_MANY_SUBJECTS
  ANOMALY_PERMISSION_DENIED
  MANUAL_OVERRIDE
}

model CopilotGovernanceSettings {
  id                          String   @id @default(uuid())
  tenantId                    String   @unique
  copilotEnabled              Boolean  @default(true)
  allowedProviderPhases       Json     @default("[1]")      // Array of phases [1,2,3,4]
  defaultExecutionMode        String   @default("METADATA_ONLY")
  allowContentScanning        Boolean  @default(false)
  allowOcr                    Boolean  @default(false)
  allowLlmSummaries           Boolean  @default(false)
  maxRunsPerDayTenant         Int      @default(100)
  maxRunsPerDayUser           Int      @default(20)
  maxEvidenceItemsPerRun      Int      @default(10000)
  maxContentScanBytes         Int      @default(512000)
  maxConcurrentRuns           Int      @default(3)
  dueSoonWindowDays           Int      @default(7)
  artifactRetentionDays       Int      @default(90)
  twoPersonApprovalForExport  Boolean  @default(false)
  requireJustification        Boolean  @default(true)
  requireConfirmation         Boolean  @default(true)
  createdAt                   DateTime @default(now())
  updatedAt                   DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("copilot_governance_settings")
}

model LegalHold {
  id            String    @id @default(uuid())
  tenantId      String
  caseId        String
  enabled       Boolean   @default(true)
  reason        String
  enabledByUserId  String
  enabledAt     DateTime  @default(now())
  disabledByUserId String?
  disabledAt    DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case      DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  enabledBy User     @relation("LegalHoldEnabledBy", fields: [enabledByUserId], references: [id])
  disabledBy User?   @relation("LegalHoldDisabledBy", fields: [disabledByUserId], references: [id])

  @@index([tenantId, caseId])
  @@map("legal_holds")
}

model RedactionSuggestion {
  id                String           @id @default(uuid())
  tenantId          String
  caseId            String
  runId             String
  evidenceItemId    String?
  elementType       String           // e.g. "EMAIL_ADDRESS", "NAME_FULL"
  originalSnippet   String           // Masked version of the PII found
  suggestedRedaction String          // Proposed redaction text
  reason            String?          // Why this redaction is suggested
  status            RedactionStatus  @default(SUGGESTED)
  reviewedByUserId  String?
  reviewedAt        DateTime?
  reviewNote        String?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt

  tenant     Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  run        CopilotRun @relation(fields: [runId], references: [id], onDelete: Cascade)
  reviewedBy User?      @relation("RedactionReviewedBy", fields: [reviewedByUserId], references: [id])

  @@index([tenantId, runId])
  @@index([tenantId, caseId])
  @@map("redaction_suggestions")
}

model BreakGlassEvent {
  id            String                @id @default(uuid())
  tenantId      String
  actorUserId   String?
  eventType     BreakGlassEventType
  description   String
  metadata      Json?
  caseId        String?
  acknowledged  Boolean               @default(false)
  acknowledgedByUserId String?
  acknowledgedAt DateTime?
  createdAt     DateTime              @default(now())

  tenant        Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  actor         User?  @relation("BreakGlassActor", fields: [actorUserId], references: [id])
  acknowledgedBy User? @relation("BreakGlassAcknowledgedBy", fields: [acknowledgedByUserId], references: [id])

  @@index([tenantId])
  @@index([tenantId, eventType])
  @@map("break_glass_events")
}

model ExportApproval {
  id                String    @id @default(uuid())
  tenantId          String
  exportArtifactId  String
  approverUserId    String
  approved          Boolean
  note              String?
  createdAt         DateTime  @default(now())

  tenant    Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  export    ExportArtifact @relation(fields: [exportArtifactId], references: [id], onDelete: Cascade)
  approver  User           @relation("ExportApprovalApprover", fields: [approverUserId], references: [id])

  @@index([tenantId, exportArtifactId])
  @@map("export_approvals")
}

// ─── Case Team Members ──────────────────────────────────────────────────────

model CaseTeamMember {
  id        String   @id @default(uuid())
  tenantId  String
  caseId    String
  userId    String
  addedAt   DateTime @default(now())

  tenant Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case   DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  user   User     @relation("CaseTeamMember", fields: [userId], references: [id])

  @@unique([tenantId, caseId, userId])
  @@index([tenantId, caseId])
  @@index([tenantId, userId])
  @@map("case_team_members")
}
