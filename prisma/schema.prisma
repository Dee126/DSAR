// ─── Models ─────────────────────────────────────────────────────────────────

model Tenant {
  id              String   @id @default(uuid())
  name            String
  slaDefaultDays  Int      @default(30)
  dueSoonDays     Int      @default(7)
  retentionDays   Int      @default(365)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  users              User[]
  dataSubjects       DataSubject[]
  cases              DSARCase[]
  tasks              Task[]
  documents          Document[]
  comments           Comment[]
  auditLogs          AuditLog[]
  stateTransitions   DSARStateTransition[]
  systems            System[]
  communicationLogs  CommunicationLog[]
  dataCollectionItems DataCollectionItem[]
  legalReviews       LegalReview[]
  integrations       Integration[]
  copilotRuns        CopilotRun[]
  copilotQueries     CopilotQuery[]
  identityProfiles   IdentityProfile[]
  evidenceItems      EvidenceItem[]
  findings           Finding[]
  detectorResults    DetectorResult[]
  copilotSummaries   CopilotSummary[]
  exportArtifacts    ExportArtifact[]
  governanceSettings CopilotGovernanceSettings?
  legalHolds         LegalHold[]
  redactionSuggestions RedactionSuggestion[]
  breakGlassEvents   BreakGlassEvent[]
  exportApprovals    ExportApproval[]
  caseTeamMembers    CaseTeamMember[]
  systemDataCategories SystemDataCategory[]
  systemProcessors     SystemProcessor[]
  discoveryRules       DiscoveryRule[]
  caseSystemLinks      CaseSystemLink[]
  slaConfig            TenantSlaConfig?
  holidays             Holiday[]
  caseDeadlines        CaseDeadline[]
  deadlineEvents       DeadlineEvent[]
  caseMilestones       CaseMilestone[]
  escalations          Escalation[]
  notifications        Notification[]
  idvRequests          IdvRequest[]
  idvArtifacts         IdvArtifact[]
  idvChecks            IdvCheck[]
  idvDecisions         IdvDecision[]
  idvRiskAssessments   IdvRiskAssessment[]
  idvSettings          IdvSettings?
  responseTemplates    ResponseTemplate[]
  responseDocuments    ResponseDocument[]
  responseApprovals    ResponseApproval[]
  deliveryRecords      DeliveryRecord[]
  redactionEntries     RedactionEntry[]
  incidents            Incident[]
  incidentSources      IncidentSource[]
  incidentSystems      IncidentSystem[]
  incidentContacts     IncidentContact[]
  incidentTimelines    IncidentTimeline[]
  incidentCommunications IncidentCommunication[]
  incidentAssessments  IncidentAssessment[]
  regulatorRecords     IncidentRegulatorRecord[]
  dsarIncidents        DsarIncident[]
  surgeGroups          SurgeGroup[]
  surgeGroupMembers    SurgeGroupMember[]
  authorityExportRuns  AuthorityExportRun[]
  vendors              Vendor[]
  vendorContacts       VendorContact[]
  vendorDpas           VendorDpa[]
  vendorRequestTemplates VendorRequestTemplate[]
  vendorRequests       VendorRequest[]
  vendorRequestItems   VendorRequestItem[]
  vendorResponses      VendorResponse[]
  vendorResponseArtifacts VendorResponseArtifact[]
  vendorSlaConfigs     VendorSlaConfig[]
  vendorEscalations    VendorEscalation[]
  kpiSnapshots         PrivacyKpiSnapshot[]
  kpiConfigs           PrivacyKpiConfig[]
  automationMetrics    AutomationMetric[]
  executiveReports     ExecutiveReport[]
  executiveReportRuns  ExecutiveReportRun[]
  kpiThresholds        KpiThreshold[]
  maturityScores       MaturityScore[]
  boardExportRuns      BoardExportRun[]
  forecastModels       ForecastModel[]
  dsarCaseItems        DsarCaseItem[]
  dsarAuditEvents      DsarAuditEvent[]

  @@map("tenants")
}

model User {
  id            String    @id @default(uuid())
  tenantId      String
  email         String
  name          String
  passwordHash  String
  role          UserRole  @default(READ_ONLY)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?

  tenant             Tenant              @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdCases       DSARCase[]          @relation("CaseCreatedBy")
  assignedCases      DSARCase[]          @relation("CaseAssignedTo")
  assignedTasks      Task[]
  uploadedDocuments  Document[]
  comments           Comment[]
  auditLogs          AuditLog[]
  stateTransitions   DSARStateTransition[]
  legalReviews       LegalReview[]       @relation("LegalReviewReviewer")
  ownedIntegrations  Integration[]       @relation("IntegrationOwner")
  assignedCollections DataCollectionItem[] @relation("DataCollectionAssignee")
  copilotRuns           CopilotRun[]        @relation("CopilotRunCreatedBy")
  copilotRunApprovals   CopilotRun[]        @relation("CopilotRunLegalApprover")
  copilotSummaries      CopilotSummary[]    @relation("CopilotSummaryCreatedBy")
  exportArtifacts       ExportArtifact[]    @relation("ExportArtifactCreatedBy")
  legalHoldsEnabled     LegalHold[]         @relation("LegalHoldEnabledBy")
  legalHoldsDisabled    LegalHold[]         @relation("LegalHoldDisabledBy")
  redactionReviews      RedactionSuggestion[] @relation("RedactionReviewedBy")
  breakGlassEventsActor BreakGlassEvent[]   @relation("BreakGlassActor")
  breakGlassEventsAck   BreakGlassEvent[]   @relation("BreakGlassAcknowledgedBy")
  exportApprovals       ExportApproval[]    @relation("ExportApprovalApprover")
  caseTeamMemberships   CaseTeamMember[]    @relation("CaseTeamMember")
  ownedSystems          System[]            @relation("SystemOwner")
  notifications         Notification[]      @relation("NotificationRecipient")
  escalationsCreated    Escalation[]        @relation("EscalationCreatedBy")
  deadlineEventsActor   DeadlineEvent[]     @relation("DeadlineEventActor")
  idvDecisions          IdvDecision[]       @relation("IdvDecisionReviewer")
  responseDocsCreated   ResponseDocument[]  @relation("ResponseDocCreatedBy")
  responseDocsEdited    ResponseDocument[]  @relation("ResponseDocEditedBy")
  responseDocsApproved  ResponseDocument[]  @relation("ResponseDocApprovedBy")
  responseApprovals     ResponseApproval[]  @relation("ResponseApprovalReviewer")
  deliveryRecords       DeliveryRecord[]    @relation("DeliveryRecordCreatedBy")
  redactionEntries      RedactionEntry[]    @relation("RedactionEntryCreatedBy")
  incidentsCreated      Incident[]          @relation("IncidentCreatedBy")
  incidentTimelines     IncidentTimeline[]  @relation("IncidentTimelineCreatedBy")
  incidentCommunications IncidentCommunication[] @relation("IncidentCommCreatedBy")
  incidentAssessments   IncidentAssessment[] @relation("IncidentAssessmentCreatedBy")
  dsarIncidentsLinked   DsarIncident[]      @relation("DsarIncidentLinkedBy")
  surgeGroupsCreated    SurgeGroup[]        @relation("SurgeGroupCreatedBy")
  authorityExportRuns   AuthorityExportRun[] @relation("AuthorityExportCreatedBy")
  vendorRequestsCreated VendorRequest[]     @relation("VendorRequestCreatedBy")
  vendorResponsesCreated VendorResponse[]   @relation("VendorResponseCreatedBy")
  vendorEscalationsCreated VendorEscalation[] @relation("VendorEscalationCreatedBy")
  executiveReportRunsCreated ExecutiveReportRun[] @relation("ExecReportRunCreatedBy")
  boardExportRunsCreated     BoardExportRun[]     @relation("BoardExportCreatedBy")
  passwordResetTokens        PasswordResetToken[]
  findingStatusChanges       Finding[]           @relation("FindingStatusChangedBy")
  dsarCaseItemDecisions      DsarCaseItem[]      @relation("CaseItemDecidedBy")
  dsarAuditEventsActed       DsarAuditEvent[]    @relation("DsarAuditActor")

  @@unique([tenantId, email])
  @@index([tenantId])
  @@map("users")
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@map("password_reset_tokens")
}

model DataSubject {
  id                String   @id @default(uuid())
  tenantId          String
  fullName          String
  email             String?
  phone             String?
  address           String?
  preferredLanguage String?  @default("en")
  identifiers       Json?
  notes             String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  tenant Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  cases  DSARCase[]

  @@index([tenantId])
  @@index([tenantId, email])
  @@map("data_subjects")
}

model DSARCase {
  id                String       @id @default(uuid())
  tenantId          String
  caseNumber        String
  type              DSARType
  status            CaseStatus   @default(NEW)
  priority          CasePriority @default(MEDIUM)
  lawfulBasis       String?
  receivedAt        DateTime     @default(now())
  dueDate           DateTime
  extendedDueDate   DateTime?
  extensionReason   String?
  channel           String?
  requesterType     String?
  description       String?
  identityVerified  Boolean      @default(false)
  tags              Json?
  deletedAt         DateTime?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  dataSubjectId    String
  createdByUserId  String
  assignedToUserId String?

  tenant          Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  dataSubject     DataSubject  @relation(fields: [dataSubjectId], references: [id])
  createdBy       User         @relation("CaseCreatedBy", fields: [createdByUserId], references: [id])
  assignedTo      User?        @relation("CaseAssignedTo", fields: [assignedToUserId], references: [id])

  stateTransitions    DSARStateTransition[]
  tasks               Task[]
  documents           Document[]
  comments            Comment[]
  communicationLogs   CommunicationLog[]
  dataCollectionItems DataCollectionItem[]
  legalReviews        LegalReview[]
  copilotRuns         CopilotRun[]
  identityProfiles    IdentityProfile[]
  legalHolds          LegalHold[]
  teamMembers         CaseTeamMember[]
  caseSystemLinks     CaseSystemLink[]
  deadline            CaseDeadline?
  deadlineEvents      DeadlineEvent[]
  milestones          CaseMilestone[]
  escalations         Escalation[]
  idvRequest          IdvRequest?
  responseDocuments   ResponseDocument[]
  dsarIncidents       DsarIncident[]
  surgeGroupMembers   SurgeGroupMember[]
  vendorRequests      VendorRequest[]
  dsarCaseItems       DsarCaseItem[]
  dsarAuditEvents     DsarAuditEvent[]

  @@unique([tenantId, caseNumber])
  @@index([tenantId])
  @@index([tenantId, status])
  @@index([tenantId, assignedToUserId])
  @@map("dsar_cases")
}

model DSARStateTransition {
  id             String     @id @default(uuid())
  tenantId       String
  caseId         String
  fromStatus     CaseStatus
  toStatus       CaseStatus
  changedByUserId String
  changedAt      DateTime   @default(now())
  reason         String
  metadata       Json?

  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case      DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  changedBy User     @relation(fields: [changedByUserId], references: [id])

  @@index([tenantId, caseId])
  @@map("dsar_state_transitions")
}

model Task {
  id             String     @id @default(uuid())
  tenantId       String
  caseId         String
  title          String
  description    String?
  status         TaskStatus @default(OPEN)
  dueDate        DateTime?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  systemId       String?
  findingId      String?

  assigneeUserId String?

  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case     DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  assignee User?    @relation(fields: [assigneeUserId], references: [id])
  system   System?  @relation(fields: [systemId], references: [id])
  finding  Finding? @relation("FindingMitigationTasks", fields: [findingId], references: [id])

  @@index([tenantId])
  @@index([tenantId, caseId])
  @@index([tenantId, assigneeUserId])
  @@map("tasks")
}

model Document {
  id              String                  @id @default(uuid())
  tenantId        String
  caseId          String
  filename        String
  contentType     String
  storageKey      String
  size            Int
  hash            String
  classification  DocumentClassification  @default(INTERNAL)
  tags            Json?
  deletedAt       DateTime?
  uploadedAt      DateTime                @default(now())

  uploadedByUserId String

  tenant     Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case       DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  uploadedBy User     @relation(fields: [uploadedByUserId], references: [id])

  @@index([tenantId])
  @@index([tenantId, caseId])
  @@map("documents")
}

model Comment {
  id           String   @id @default(uuid())
  tenantId     String
  caseId       String
  authorUserId String
  body         String
  createdAt    DateTime @default(now())

  tenant Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case   DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  author User     @relation(fields: [authorUserId], references: [id])

  @@index([tenantId, caseId])
  @@map("comments")
}

model AuditLog {
  id          String   @id @default(uuid())
  tenantId    String?
  actorUserId String?
  action      String
  entityType  String
  entityId    String?
  createdAt   DateTime @default(now())
  ip          String?
  userAgent   String?
  details     Json?

  tenant Tenant? @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  actor  User?   @relation(fields: [actorUserId], references: [id])

  @@index([tenantId])
  @@index([tenantId, entityType, entityId])
  @@index([tenantId, actorUserId])
  @@map("audit_logs")
}

model System {
  id           String   @id @default(uuid())
  tenantId     String
  name         String
  description  String?
  owner        String?
  contactEmail String?
  tags         Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Data Inventory fields
  ownerUserId               String?
  criticality               SystemCriticality    @default(MEDIUM)
  systemStatus              SystemStatus         @default(ACTIVE)
  containsSpecialCategories Boolean              @default(false)
  inScopeForDsar            Boolean              @default(true)
  notes                     String?

  // Automation / Connector profile
  automationReadiness              AutomationReadiness @default(MANUAL)
  connectorType                    ConnectorType       @default(NONE)
  exportFormats                    String[]            @default([])
  estimatedCollectionTimeMinutes   Int?

  // Location
  dataResidencyPrimary      String?
  processingRegions         String[]  @default([])
  thirdCountryTransfers     Boolean   @default(false)
  thirdCountryTransferDetails String?

  // Identifier types this system uses (email, phone, customerId, employeeId, etc.)
  identifierTypes           String[]  @default([])

  tenant              Tenant               @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  ownerUser           User?                @relation("SystemOwner", fields: [ownerUserId], references: [id])
  tasks               Task[]
  dataCollectionItems DataCollectionItem[]
  dataCategories      SystemDataCategory[]
  processors          SystemProcessor[]
  discoveryRules      DiscoveryRule[]
  caseSystemLinks     CaseSystemLink[]
  incidentSystems     IncidentSystem[]
  vendorRequests      VendorRequest[]   @relation("VendorRequestSystem")
  vendorRequestItems  VendorRequestItem[] @relation("VendorRequestItemSystem")
  findings            Finding[]
  dsarCaseItems       DsarCaseItem[]     @relation("CaseItemSystem")

  @@index([tenantId])
  @@map("systems")
}

// ─── Data Inventory Models ──────────────────────────────────────────────────

model SystemDataCategory {
  id                       String       @id @default(uuid())
  tenantId                 String
  systemId                 String
  category                 DataCategory
  customCategoryName       String?
  processingPurpose        String?
  lawfulBasis              LawfulBasis  @default(LEGITIMATE_INTERESTS)
  retentionPeriod          String?
  retentionDays            Int?
  dsarRelevanceAccess      Boolean      @default(true)
  dsarRelevanceErasure     Boolean      @default(true)
  dsarRelevanceRectification Boolean    @default(false)
  dsarRelevancePortability Boolean      @default(false)
  dsarRelevanceRestriction Boolean      @default(false)
  dsarRelevanceObjection   Boolean      @default(false)
  notes                    String?
  createdAt                DateTime     @default(now())
  updatedAt                DateTime     @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  system System @relation(fields: [systemId], references: [id], onDelete: Cascade)

  @@unique([systemId, category])
  @@index([tenantId])
  @@map("system_data_categories")
}

model SystemProcessor {
  id                String        @id @default(uuid())
  tenantId          String
  systemId          String
  vendorName        String
  vendorId          String?       // Normalized vendor reference
  role              ProcessorRole @default(PROCESSOR)
  contractReference String?
  dpaOnFile         Boolean       @default(false)
  contactEmail      String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  tenant Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  system System  @relation(fields: [systemId], references: [id], onDelete: Cascade)
  vendor Vendor? @relation("VendorProcessors", fields: [vendorId], references: [id])

  @@index([tenantId])
  @@index([systemId])
  @@index([vendorId])
  @@map("system_processors")
}

model DiscoveryRule {
  id               String     @id @default(uuid())
  tenantId         String
  name             String
  dsarTypes        DSARType[]
  dataSubjectTypes String[]   @default([])
  identifierTypes  String[]   @default([])
  conditions       Json?
  systemId         String
  weight           Int        @default(50)
  active           Boolean    @default(true)
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  system System @relation(fields: [systemId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([tenantId, active])
  @@map("discovery_rules")
}

model CaseSystemLink {
  id                    String               @id @default(uuid())
  tenantId              String
  caseId                String
  systemId              String
  collectionStatus      DataCollectionStatus @default(PENDING)
  suggestedByDiscovery  Boolean              @default(false)
  discoveryScore        Float?
  discoveryReason       String?
  notes                 String?
  createdAt             DateTime             @default(now())
  updatedAt             DateTime             @updatedAt

  tenant Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case   DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  system System   @relation(fields: [systemId], references: [id], onDelete: Cascade)

  @@unique([caseId, systemId])
  @@index([tenantId])
  @@index([tenantId, caseId])
  @@map("case_system_links")
}

// ─── New Models ─────────────────────────────────────────────────────────────

model CommunicationLog {
  id          String                 @id @default(uuid())
  tenantId    String
  caseId      String
  direction   CommunicationDirection
  channel     CommunicationChannel
  subject     String?
  body        String
  attachments Json?
  sentAt      DateTime               @default(now())
  createdAt   DateTime               @default(now())

