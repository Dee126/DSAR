generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Enums ──────────────────────────────────────────────────────────────────

enum UserRole {
  SUPER_ADMIN
  TENANT_ADMIN
  DPO
  CASE_MANAGER
  CONTRIBUTOR
  READ_ONLY
}

enum DSARType {
  ACCESS
  ERASURE
  RECTIFICATION
  RESTRICTION
  PORTABILITY
  OBJECTION
}

enum CaseStatus {
  NEW
  IDENTITY_VERIFICATION
  INTAKE_TRIAGE
  DATA_COLLECTION
  REVIEW_LEGAL
  RESPONSE_PREPARATION
  RESPONSE_SENT
  CLOSED
  REJECTED
}

enum CasePriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum TaskStatus {
  OPEN
  IN_PROGRESS
  BLOCKED
  DONE
}

enum DocumentClassification {
  PUBLIC
  INTERNAL
  CONFIDENTIAL
  RESTRICTED
}

// ─── Models ─────────────────────────────────────────────────────────────────

model Tenant {
  id            String   @id @default(uuid())
  name          String
  slaDefaultDays Int     @default(30)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  users              User[]
  dataSubjects       DataSubject[]
  cases              DSARCase[]
  tasks              Task[]
  documents          Document[]
  comments           Comment[]
  auditLogs          AuditLog[]
  stateTransitions   DSARStateTransition[]
  systems            System[]

  @@map("tenants")
}

model User {
  id            String    @id @default(uuid())
  tenantId      String
  email         String
  name          String
  passwordHash  String
  role          UserRole  @default(READ_ONLY)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?

  tenant             Tenant              @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdCases       DSARCase[]          @relation("CaseCreatedBy")
  assignedCases      DSARCase[]          @relation("CaseAssignedTo")
  assignedTasks      Task[]
  uploadedDocuments  Document[]
  comments           Comment[]
  auditLogs          AuditLog[]
  stateTransitions   DSARStateTransition[]

  @@unique([tenantId, email])
  @@index([tenantId])
  @@map("users")
}

model DataSubject {
  id          String   @id @default(uuid())
  tenantId    String
  fullName    String
  email       String?
  phone       String?
  address     String?
  identifiers Json?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  cases  DSARCase[]

  @@index([tenantId])
  @@index([tenantId, email])
  @@map("data_subjects")
}

model DSARCase {
  id              String       @id @default(uuid())
  tenantId        String
  caseNumber      String
  type            DSARType
  status          CaseStatus   @default(NEW)
  priority        CasePriority @default(MEDIUM)
  lawfulBasis     String?
  receivedAt      DateTime     @default(now())
  dueDate         DateTime
  channel         String?
  requesterType   String?
  description     String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  dataSubjectId   String
  createdByUserId String
  assignedToUserId String?

  tenant          Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  dataSubject     DataSubject  @relation(fields: [dataSubjectId], references: [id])
  createdBy       User         @relation("CaseCreatedBy", fields: [createdByUserId], references: [id])
  assignedTo      User?        @relation("CaseAssignedTo", fields: [assignedToUserId], references: [id])

  stateTransitions DSARStateTransition[]
  tasks            Task[]
  documents        Document[]
  comments         Comment[]

  @@unique([tenantId, caseNumber])
  @@index([tenantId])
  @@index([tenantId, status])
  @@index([tenantId, assignedToUserId])
  @@map("dsar_cases")
}

model DSARStateTransition {
  id             String     @id @default(uuid())
  tenantId       String
  caseId         String
  fromStatus     CaseStatus
  toStatus       CaseStatus
  changedByUserId String
  changedAt      DateTime   @default(now())
  reason         String
  metadata       Json?

  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case      DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  changedBy User     @relation(fields: [changedByUserId], references: [id])

  @@index([tenantId, caseId])
  @@map("dsar_state_transitions")
}

model Task {
  id             String     @id @default(uuid())
  tenantId       String
  caseId         String
  title          String
  description    String?
  status         TaskStatus @default(OPEN)
  dueDate        DateTime?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  systemId       String?

  assigneeUserId String?

  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case     DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  assignee User?    @relation(fields: [assigneeUserId], references: [id])
  system   System?  @relation(fields: [systemId], references: [id])

  @@index([tenantId])
  @@index([tenantId, caseId])
  @@index([tenantId, assigneeUserId])
  @@map("tasks")
}

model Document {
  id              String                  @id @default(uuid())
  tenantId        String
  caseId          String
  filename        String
  contentType     String
  storageKey      String
  size            Int
  hash            String
  classification  DocumentClassification  @default(INTERNAL)
  tags            Json?
  uploadedAt      DateTime                @default(now())

  uploadedByUserId String

  tenant     Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case       DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  uploadedBy User     @relation(fields: [uploadedByUserId], references: [id])

  @@index([tenantId])
  @@index([tenantId, caseId])
  @@map("documents")
}

model Comment {
  id           String   @id @default(uuid())
  tenantId     String
  caseId       String
  authorUserId String
  body         String
  createdAt    DateTime @default(now())

  tenant Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case   DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  author User     @relation(fields: [authorUserId], references: [id])

  @@index([tenantId, caseId])
  @@map("comments")
}

model AuditLog {
  id          String   @id @default(uuid())
  tenantId    String?
  actorUserId String?
  action      String
  entityType  String
  entityId    String?
  createdAt   DateTime @default(now())
  ip          String?
  userAgent   String?
  details     Json?

  tenant Tenant? @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  actor  User?   @relation(fields: [actorUserId], references: [id])

  @@index([tenantId])
  @@index([tenantId, entityType, entityId])
  @@index([tenantId, actorUserId])
  @@map("audit_logs")
}

model System {
  id           String   @id @default(uuid())
  tenantId     String
  name         String
  description  String?
  owner        String?
  contactEmail String?
  tags         Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  tasks  Task[]

  @@index([tenantId])
  @@map("systems")
}
