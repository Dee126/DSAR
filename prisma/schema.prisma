generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Enums ──────────────────────────────────────────────────────────────────

enum UserRole {
  SUPER_ADMIN
  TENANT_ADMIN
  DPO
  CASE_MANAGER
  CONTRIBUTOR
  READ_ONLY
}

enum DSARType {
  ACCESS
  ERASURE
  RECTIFICATION
  RESTRICTION
  PORTABILITY
  OBJECTION
}

enum CaseStatus {
  NEW
  IDENTITY_VERIFICATION
  INTAKE_TRIAGE
  DATA_COLLECTION
  REVIEW_LEGAL
  RESPONSE_PREPARATION
  RESPONSE_SENT
  CLOSED
  REJECTED
}

enum CasePriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum TaskStatus {
  OPEN
  IN_PROGRESS
  BLOCKED
  DONE
}

enum DocumentClassification {
  PUBLIC
  INTERNAL
  CONFIDENTIAL
  RESTRICTED
}

enum CommunicationDirection {
  INBOUND
  OUTBOUND
}

enum CommunicationChannel {
  EMAIL
  LETTER
  PORTAL
  PHONE
}

enum DataCollectionStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
  NOT_APPLICABLE
}

enum LegalReviewStatus {
  PENDING
  IN_REVIEW
  APPROVED
  REJECTED
  CHANGES_REQUESTED
}

enum IntegrationProvider {
  // Phase 1 — Microsoft (all via Graph API)
  M365              // Entra ID / User Directory
  EXCHANGE_ONLINE   // Exchange Online mailbox search
  SHAREPOINT        // SharePoint Online sites/drives
  ONEDRIVE          // OneDrive for Business
  // Phase 2 — High business value
  GOOGLE_WORKSPACE
  SALESFORCE
  SERVICENOW
  // Phase 3 — Customer-dependent
  ATLASSIAN_JIRA
  ATLASSIAN_CONFLUENCE
  WORKDAY
  SAP_SUCCESSFACTORS
  OKTA
  // Phase 4 — Cloud providers (DSAR-relevant only if PII in storage/logs)
  AWS
  AZURE
  GCP
}

enum IntegrationStatus {
  ENABLED
  DISABLED
}

enum CopilotRunStatus {
  CREATED
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

enum CopilotQueryStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  SKIPPED
}

enum FindingSeverity {
  INFO
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum DataCategory {
  IDENTIFICATION          // Name, DOB, photo, ID numbers
  CONTACT                 // Email, phone, address
  CONTRACT                // Account info, customer number
  PAYMENT_BANK            // IBAN, credit card, billing
  COMMUNICATION           // Emails, messages, call logs
  HR_EMPLOYMENT           // Salary, evaluations, contracts
  CREDIT_FINANCIAL        // Credit score, debts, transactions
  ONLINE_TECHNICAL        // IP, cookies, device IDs, logs
  SPECIAL_CATEGORY_ART9   // Health, biometric, political, religious, ethnic, sexual, trade union, criminal
}

enum Art9ReviewStatus {
  PENDING_REVIEW
  APPROVED
  BLOCKED
}

enum IntegrationHealthStatus {
  HEALTHY
  DEGRADED
  FAILED
  NOT_CONFIGURED
}

// ─── Models ─────────────────────────────────────────────────────────────────

model Tenant {
  id              String   @id @default(uuid())
  name            String
  slaDefaultDays  Int      @default(30)
  dueSoonDays     Int      @default(7)
  retentionDays   Int      @default(365)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  users              User[]
  dataSubjects       DataSubject[]
  cases              DSARCase[]
  tasks              Task[]
  documents          Document[]
  comments           Comment[]
  auditLogs          AuditLog[]
  stateTransitions   DSARStateTransition[]
  systems            System[]
  communicationLogs  CommunicationLog[]
  dataCollectionItems DataCollectionItem[]
  legalReviews       LegalReview[]
  integrations       Integration[]
  copilotRuns        CopilotRun[]
  copilotQueries     CopilotQuery[]
  identityProfiles   IdentityProfile[]
  findings           Finding[]
  detectorResults    DetectorResult[]

  @@map("tenants")
}

model User {
  id            String    @id @default(uuid())
  tenantId      String
  email         String
  name          String
  passwordHash  String
  role          UserRole  @default(READ_ONLY)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?

  tenant             Tenant              @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdCases       DSARCase[]          @relation("CaseCreatedBy")
  assignedCases      DSARCase[]          @relation("CaseAssignedTo")
  assignedTasks      Task[]
  uploadedDocuments  Document[]
  comments           Comment[]
  auditLogs          AuditLog[]
  stateTransitions   DSARStateTransition[]
  legalReviews       LegalReview[]       @relation("LegalReviewReviewer")
  ownedIntegrations  Integration[]       @relation("IntegrationOwner")
  assignedCollections DataCollectionItem[] @relation("DataCollectionAssignee")
  copilotRuns        CopilotRun[]        @relation("CopilotRunCreatedBy")

  @@unique([tenantId, email])
  @@index([tenantId])
  @@map("users")
}

model DataSubject {
  id                String   @id @default(uuid())
  tenantId          String
  fullName          String
  email             String?
  phone             String?
  address           String?
  preferredLanguage String?  @default("en")
  identifiers       Json?
  notes             String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  tenant Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  cases  DSARCase[]

  @@index([tenantId])
  @@index([tenantId, email])
  @@map("data_subjects")
}

model DSARCase {
  id                String       @id @default(uuid())
  tenantId          String
  caseNumber        String
  type              DSARType
  status            CaseStatus   @default(NEW)
  priority          CasePriority @default(MEDIUM)
  lawfulBasis       String?
  receivedAt        DateTime     @default(now())
  dueDate           DateTime
  extendedDueDate   DateTime?
  extensionReason   String?
  channel           String?
  requesterType     String?
  description       String?
  identityVerified  Boolean      @default(false)
  tags              Json?
  deletedAt         DateTime?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  dataSubjectId    String
  createdByUserId  String
  assignedToUserId String?

  tenant          Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  dataSubject     DataSubject  @relation(fields: [dataSubjectId], references: [id])
  createdBy       User         @relation("CaseCreatedBy", fields: [createdByUserId], references: [id])
  assignedTo      User?        @relation("CaseAssignedTo", fields: [assignedToUserId], references: [id])

  stateTransitions    DSARStateTransition[]
  tasks               Task[]
  documents           Document[]
  comments            Comment[]
  communicationLogs   CommunicationLog[]
  dataCollectionItems DataCollectionItem[]
  legalReviews        LegalReview[]
  copilotRuns         CopilotRun[]
  identityProfiles    IdentityProfile[]

  @@unique([tenantId, caseNumber])
  @@index([tenantId])
  @@index([tenantId, status])
  @@index([tenantId, assignedToUserId])
  @@map("dsar_cases")
}

model DSARStateTransition {
  id             String     @id @default(uuid())
  tenantId       String
  caseId         String
  fromStatus     CaseStatus
  toStatus       CaseStatus
  changedByUserId String
  changedAt      DateTime   @default(now())
  reason         String
  metadata       Json?

  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case      DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  changedBy User     @relation(fields: [changedByUserId], references: [id])

  @@index([tenantId, caseId])
  @@map("dsar_state_transitions")
}

model Task {
  id             String     @id @default(uuid())
  tenantId       String
  caseId         String
  title          String
  description    String?
  status         TaskStatus @default(OPEN)
  dueDate        DateTime?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  systemId       String?

  assigneeUserId String?

  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case     DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  assignee User?    @relation(fields: [assigneeUserId], references: [id])
  system   System?  @relation(fields: [systemId], references: [id])

  @@index([tenantId])
  @@index([tenantId, caseId])
  @@index([tenantId, assigneeUserId])
  @@map("tasks")
}

model Document {
  id              String                  @id @default(uuid())
  tenantId        String
  caseId          String
  filename        String
  contentType     String
  storageKey      String
  size            Int
  hash            String
  classification  DocumentClassification  @default(INTERNAL)
  tags            Json?
  deletedAt       DateTime?
  uploadedAt      DateTime                @default(now())

  uploadedByUserId String

  tenant     Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case       DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  uploadedBy User     @relation(fields: [uploadedByUserId], references: [id])

  @@index([tenantId])
  @@index([tenantId, caseId])
  @@map("documents")
}

model Comment {
  id           String   @id @default(uuid())
  tenantId     String
  caseId       String
  authorUserId String
  body         String
  createdAt    DateTime @default(now())

  tenant Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case   DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  author User     @relation(fields: [authorUserId], references: [id])

  @@index([tenantId, caseId])
  @@map("comments")
}

model AuditLog {
  id          String   @id @default(uuid())
  tenantId    String?
  actorUserId String?
  action      String
  entityType  String
  entityId    String?
  createdAt   DateTime @default(now())
  ip          String?
  userAgent   String?
  details     Json?

  tenant Tenant? @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  actor  User?   @relation(fields: [actorUserId], references: [id])

  @@index([tenantId])
  @@index([tenantId, entityType, entityId])
  @@index([tenantId, actorUserId])
  @@map("audit_logs")
}

model System {
  id           String   @id @default(uuid())
  tenantId     String
  name         String
  description  String?
  owner        String?
  contactEmail String?
  tags         Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  tenant              Tenant               @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  tasks               Task[]
  dataCollectionItems DataCollectionItem[]

  @@index([tenantId])
  @@map("systems")
}

// ─── New Models ─────────────────────────────────────────────────────────────

model CommunicationLog {
  id          String                 @id @default(uuid())
  tenantId    String
  caseId      String
  direction   CommunicationDirection
  channel     CommunicationChannel
  subject     String?
  body        String
  attachments Json?
  sentAt      DateTime               @default(now())
  createdAt   DateTime               @default(now())

  tenant Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case   DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)

  @@index([tenantId, caseId])
  @@map("communication_logs")
}

model DataCollectionItem {
  id                String               @id @default(uuid())
  tenantId          String
  caseId            String
  systemId          String?
  integrationId     String?
  systemLabel       String?
  querySpec         Json?
  status            DataCollectionStatus @default(PENDING)
  findingsSummary   String?
  recordsFound      Int?
  resultMetadata    Json?
  assignedToUserId  String?
  startedAt         DateTime?
  completedAt       DateTime?
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt

  tenant      Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case        DSARCase     @relation(fields: [caseId], references: [id], onDelete: Cascade)
  system      System?      @relation(fields: [systemId], references: [id])
  integration Integration? @relation(fields: [integrationId], references: [id])
  assignedTo  User?        @relation("DataCollectionAssignee", fields: [assignedToUserId], references: [id])

  @@index([tenantId, caseId])
  @@map("data_collection_items")
}

model LegalReview {
  id                String            @id @default(uuid())
  tenantId          String
  caseId            String
  status            LegalReviewStatus @default(PENDING)
  issues            String?
  exemptionsApplied Json?
  redactions        String?
  notes             String?
  reviewerUserId    String?
  approvedAt        DateTime?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case     DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  reviewer User?    @relation("LegalReviewReviewer", fields: [reviewerUserId], references: [id])

  @@index([tenantId, caseId])
  @@map("legal_reviews")
}

model Integration {
  id                 String                  @id @default(uuid())
  tenantId           String
  provider           IntegrationProvider
  name               String
  status             IntegrationStatus       @default(DISABLED)
  config             Json?
  secretRef          String?
  healthStatus       IntegrationHealthStatus @default(NOT_CONFIGURED)
  lastHealthCheckAt  DateTime?
  lastSuccessAt      DateTime?
  lastError          String?
  ownerUserId        String?
  createdAt          DateTime                @default(now())
  updatedAt          DateTime                @updatedAt

  tenant              Tenant               @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  owner               User?                @relation("IntegrationOwner", fields: [ownerUserId], references: [id])
  dataCollectionItems DataCollectionItem[]
  copilotQueries      CopilotQuery[]

  @@index([tenantId])
  @@index([tenantId, status])
  @@map("integrations")
}

// ─── Privacy Copilot Models ──────────────────────────────────────────────────

model CopilotRun {
  id              String           @id @default(uuid())
  tenantId        String
  caseId          String
  createdByUserId String
  status          CopilotRunStatus @default(CREATED)
  reason          String           // Justification for running the copilot
  summary         String?          // LLM-generated summary (from evidence only)
  responseDraft   String?          // DSAR response draft
  identityGraph   Json?            // Resolved identity graph
  totalFindings   Int              @default(0)
  art9Flagged     Boolean          @default(false)
  art9ReviewStatus Art9ReviewStatus?
  art9ReviewedBy  String?
  art9ReviewedAt  DateTime?
  startedAt       DateTime?
  completedAt     DateTime?
  errorMessage    String?
  metadata        Json?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  tenant    Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case      DSARCase       @relation(fields: [caseId], references: [id], onDelete: Cascade)
  createdBy User           @relation("CopilotRunCreatedBy", fields: [createdByUserId], references: [id])
  queries   CopilotQuery[]
  findings  Finding[]

  @@index([tenantId, caseId])
  @@index([tenantId, status])
  @@map("copilot_runs")
}

model CopilotQuery {
  id             String             @id @default(uuid())
  tenantId       String
  runId          String
  integrationId  String?
  provider       String
  querySpec      Json               // Full QuerySpec used for this query
  status         CopilotQueryStatus @default(PENDING)
  recordsFound   Int?
  errorMessage   String?
  executionMs    Int?
  startedAt      DateTime?
  completedAt    DateTime?
  createdAt      DateTime           @default(now())

  tenant      Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  run         CopilotRun   @relation(fields: [runId], references: [id], onDelete: Cascade)
  integration Integration? @relation(fields: [integrationId], references: [id])
  findings    Finding[]

  @@index([tenantId, runId])
  @@map("copilot_queries")
}

model IdentityProfile {
  id              String   @id @default(uuid())
  tenantId        String
  caseId          String
  runId           String?
  primaryEmail    String?
  primaryName     String?
  identifiers     Json     // Array of { type, value, source, confidence }
  resolvedSystems Json?    // Array of { provider, accountId, displayName }
  confidence      Float    @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  tenant Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case   DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)

  @@unique([tenantId, caseId])
  @@map("identity_profiles")
}

model Finding {
  id             String          @id @default(uuid())
  tenantId       String
  runId          String
  queryId        String?
  source         String          // Provider name (e.g. "EXCHANGE_ONLINE")
  location       String          // e.g. "mailbox:user@acme.com/Inbox"
  title          String
  description    String?
  dataCategories DataCategory[]
  severity       FindingSeverity @default(INFO)
  isArt9         Boolean         @default(false)
  art9Categories String[]        // e.g. ["HEALTH", "BIOMETRIC"]
  recordCount    Int             @default(1)
  metadata       Json?           // Additional structured data
  evidenceRef    String?         // Reference to evidence storage
  redacted       Boolean         @default(false)
  createdAt      DateTime        @default(now())

  tenant   Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  run      CopilotRun    @relation(fields: [runId], references: [id], onDelete: Cascade)
  query    CopilotQuery? @relation(fields: [queryId], references: [id])
  detectorResults DetectorResult[]

  @@index([tenantId, runId])
  @@index([tenantId, runId, isArt9])
  @@map("findings")
}

model DetectorResult {
  id          String   @id @default(uuid())
  tenantId    String
  findingId   String
  detectorType String  // "regex", "pdf_metadata", "ocr", "keyword"
  patternName String   // e.g. "IBAN", "CREDIT_CARD", "EMAIL"
  matchCount  Int      @default(1)
  sampleMatch String?  // Redacted sample (e.g. "DE89 **** **** 0000")
  confidence  Float    @default(1.0)
  metadata    Json?
  createdAt   DateTime @default(now())

  tenant  Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  finding Finding @relation(fields: [findingId], references: [id], onDelete: Cascade)

  @@index([tenantId, findingId])
  @@map("detector_results")
}
