generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ─── Enums ──────────────────────────────────────────────────────────────────

enum UserRole {
  SUPER_ADMIN
  TENANT_ADMIN
  DPO
  CASE_MANAGER
  ANALYST
  AUDITOR
  CONTRIBUTOR
  READ_ONLY
}

enum DSARType {
  ACCESS
  ERASURE
  RECTIFICATION
  RESTRICTION
  PORTABILITY
  OBJECTION
}

enum CaseStatus {
  NEW
  IDENTITY_VERIFICATION
  INTAKE_TRIAGE
  DATA_COLLECTION
  REVIEW_LEGAL
  RESPONSE_PREPARATION
  RESPONSE_SENT
  CLOSED
  REJECTED
}

enum CasePriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum TaskStatus {
  OPEN
  IN_PROGRESS
  BLOCKED
  DONE
}

enum DocumentClassification {
  PUBLIC
  INTERNAL
  CONFIDENTIAL
  RESTRICTED
}

enum CommunicationDirection {
  INBOUND
  OUTBOUND
}

enum CommunicationChannel {
  EMAIL
  LETTER
  PORTAL
  PHONE
}

enum DataCollectionStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
  NOT_APPLICABLE
}

enum LegalReviewStatus {
  PENDING
  IN_REVIEW
  APPROVED
  REJECTED
  CHANGES_REQUESTED
}

enum IntegrationProvider {
  // Phase 1 — Microsoft (all via Graph API)
  M365              // Entra ID / User Directory
  EXCHANGE_ONLINE   // Exchange Online mailbox search
  SHAREPOINT        // SharePoint Online sites/drives
  ONEDRIVE          // OneDrive for Business
  // Phase 2 — High business value
  GOOGLE_WORKSPACE
  SALESFORCE
  SERVICENOW
  // Phase 3 — Customer-dependent
  ATLASSIAN_JIRA
  ATLASSIAN_CONFLUENCE
  WORKDAY
  SAP_SUCCESSFACTORS
  OKTA
  // Phase 4 — Cloud providers (DSAR-relevant only if PII in storage/logs)
  AWS
  AZURE
  GCP
}

enum IntegrationStatus {
  ENABLED
  DISABLED
}

enum CopilotRunStatus {
  DRAFT
  QUEUED
  RUNNING
  COMPLETED
  FAILED
  CANCELED
}

enum CopilotQueryStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  SKIPPED
}

enum FindingSeverity {
  INFO
  WARNING
  CRITICAL
}

enum FindingStatus {
  NEW
  ACCEPTED
  MITIGATED
}

enum DataCategory {
  IDENTIFICATION          // Name, DOB, photo, ID numbers
  CONTACT                 // Email, phone, address
  CONTRACT                // Account info, customer number
  PAYMENT                 // IBAN, credit card, billing
  COMMUNICATION           // Emails, messages, call logs
  HR                      // Salary, evaluations, contracts
  CREDITWORTHINESS        // Credit score, debts, transactions
  ONLINE_TECHNICAL        // IP, cookies, device IDs, logs
  HEALTH                  // Medical, disability, treatments (Art. 9)
  RELIGION                // Religious beliefs (Art. 9)
  UNION                   // Trade union membership (Art. 9)
  POLITICAL_OPINION       // Political opinions (Art. 9)
  OTHER_SPECIAL_CATEGORY  // Biometric, ethnic, sexual orientation, criminal (Art. 9)
  OTHER                   // Unclassified
}

enum LegalApprovalStatus {
  NOT_REQUIRED
  REQUIRED
  PENDING
  APPROVED
  REJECTED
}

enum QueryIntent {
  DATA_LOCATION
  DSAR_SUMMARY
  CATEGORY_OVERVIEW
  RISK_CHECK
  EXPORT_PREP
  OTHER
}

enum EvidenceItemType {
  EMAIL
  FILE
  RECORD
  CALENDAR
  CONTACT
  TICKET
  OTHER
}

enum ContentHandling {
  NONE
  METADATA_ONLY
  CONTENT_STORED
}

enum PrimaryIdentifierType {
  EMAIL
  UPN
  OBJECT_ID
  CUSTOMER_ID
  EMPLOYEE_ID
  PHONE
  IBAN
  OTHER
}

enum CopilotSummaryType {
  LOCATION_OVERVIEW
  CATEGORY_OVERVIEW
  DSAR_DRAFT
  RISK_SUMMARY
}

enum ExportType {
  ZIP
  DOCX
  XLSX
  PDF
  JSON
  CSV
}

enum ExportLegalGateStatus {
  BLOCKED
  ALLOWED
}

enum IntegrationHealthStatus {
  HEALTHY
  DEGRADED
  FAILED
  NOT_CONFIGURED
}

