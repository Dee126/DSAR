  @@index([retainUntil])
  @@map("idv_artifacts")
}

model IdvCheck {
  id          String    @id @default(uuid())
  tenantId    String
  requestId   String
  method      IdvMethod
  passed      Boolean?
  details     Json?     // method-specific: OTP attempts, KB answers, etc.
  performedAt DateTime  @default(now())

  tenant  Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  request IdvRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)

  @@index([tenantId, requestId])
  @@map("idv_checks")
}

model IdvDecision {
  id             String             @id @default(uuid())
  tenantId       String
  requestId      String
  outcome        IdvDecisionOutcome
  rationale      String
  reviewerUserId String
  decidedAt      DateTime           @default(now())

