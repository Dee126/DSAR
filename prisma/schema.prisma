model IdvRequest {
  id              String           @id @default(uuid())
  tenantId        String
  caseId          String           @unique
  dataSubjectId   String
  status          IdvRequestStatus @default(NOT_STARTED)
  portalToken     String?          @unique
  portalTokenExp  DateTime?
  allowedMethods  IdvMethod[]
  submittedAt     DateTime?
  expiresAt       DateTime?
  maxSubmissions  Int              @default(3)
  submissionCount Int              @default(0)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  tenant      Tenant           @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case        DSARCase         @relation(fields: [caseId], references: [id], onDelete: Cascade)
  artifacts   IdvArtifact[]
  checks      IdvCheck[]
  decisions   IdvDecision[]
  assessments IdvRiskAssessment[]

  @@index([tenantId, caseId])
  @@index([portalToken])
  @@map("idv_requests")
}

model IdvArtifact {
  id             String          @id @default(uuid())
  tenantId       String
  requestId      String
  artifactType   IdvArtifactType
  filename       String
  mimeType       String
  sizeBytes      Int
