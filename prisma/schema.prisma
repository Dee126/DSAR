  request  IdvRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  reviewer User       @relation("IdvDecisionReviewer", fields: [reviewerUserId], references: [id])

  @@index([tenantId, requestId])
  @@map("idv_decisions")
}

model IdvRiskAssessment {
