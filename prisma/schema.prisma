// ─── Executive KPI & Board Reporting Models ─────────────────────────────────

model PrivacyKpiSnapshot {
  id              String            @id @default(uuid())
  tenantId        String
  period          KpiSnapshotPeriod @default(MONTHLY)
  snapshotDate    DateTime
  totalDsars      Int               @default(0)
  openDsars       Int               @default(0)
  closedDsars     Int               @default(0)
  avgTimeToCloseDays  Float?
  medianTimeToCloseDays Float?
  extensionRatePct    Float?
  overdueRatePct      Float?
  dsarsByType         Json?         // { ACCESS: 10, ERASURE: 5, ... }
  dsarsBySubjectType  Json?
  dsarsLinkedToIncidentPct Float?
  riskDistribution    Json?         // { green: 30, yellow: 10, red: 5 }
  highRiskCasesCount  Int           @default(0)
  incidentLinkedHighRiskCount Int   @default(0)
  vendorOverdueCount  Int           @default(0)
  autoSuggestedSystemsPct Float?
  vendorAutoGeneratedPct  Float?
  templateResponsePct     Float?
  idvAutomationPct        Float?
  apiReadySystemsPct      Float?
  dpaOnFilePct            Float?
  systemsCompleteMetaPct  Float?
  retentionDefinedPct     Float?
  thirdCountryTransferRatio Float?
  estimatedCostPerDsar    Float?
  estimatedTimeSavedPerDsar Float?
  totalTimeSavedMonthly   Float?
  maturityScore           Float?    // 0-100 composite
  rawData                 Json?     // full detailed data blob
  createdAt               DateTime  @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, period, snapshotDate])
  @@index([tenantId, period])
  @@index([tenantId, snapshotDate])
  @@map("privacy_kpi_snapshots")
}

model PrivacyKpiConfig {
  id                    String   @id @default(uuid())
  tenantId              String
  estimatedCostPerDsar  Float    @default(150.0)  // EUR
  estimatedMinutesManual Float   @default(480.0)  // 8h manual
  estimatedMinutesAutomated Float @default(120.0) // 2h automated
  maturityWeights       Json?    // { documentation: 0.2, automation: 0.3, ... }
  snapshotCron          String   @default("0 2 * * *") // daily at 2am
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId])
  @@map("privacy_kpi_configs")
}

model AutomationMetric {
  id                    String   @id @default(uuid())
  tenantId              String
  month                 DateTime // first day of month
  totalCases            Int      @default(0)
  casesWithAutoSystems  Int      @default(0)
  vendorRequestsTotal   Int      @default(0)
  vendorRequestsAuto    Int      @default(0)
  responsesTotal        Int      @default(0)
  responsesViaTemplate  Int      @default(0)
  idvRequestsTotal      Int      @default(0)
  idvRequestsAutomated  Int      @default(0)
  avgProcessingMinutes  Float?
  createdAt             DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, month])
  @@index([tenantId])
  @@map("automation_metrics")
}

model ExecutiveReport {
  id          String   @id @default(uuid())
  tenantId    String
  name        String
  description String?
  sections    Json?    // configurable sections
  schedule    String?  // cron expression
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant Tenant              @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  runs   ExecutiveReportRun[]

  @@index([tenantId])
  @@map("executive_reports")
}

model ExecutiveReportRun {
  id              String       @id @default(uuid())
  tenantId        String
  reportId        String
  format          ReportFormat @default(PDF)
  status          ReportStatus @default(PENDING)
  dateRangeStart  DateTime
  dateRangeEnd    DateTime
  storageKey      String?
  fileSize        Int?
  fileChecksum    String?
  errorMessage    String?
  createdByUserId String
  createdAt       DateTime     @default(now())
  completedAt     DateTime?

  tenant    Tenant          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  report    ExecutiveReport @relation(fields: [reportId], references: [id], onDelete: Cascade)
  createdBy User            @relation("ExecReportRunCreatedBy", fields: [createdByUserId], references: [id])

  @@index([tenantId, reportId])
  @@map("executive_report_runs")
}

model KpiThreshold {
  id          String   @id @default(uuid())
  tenantId    String
  kpiKey      String   // e.g. "overdueRatePct", "maturityScore"
  greenMax    Float?   // <= greenMax = green
  yellowMax   Float?   // <= yellowMax = yellow, else red
  direction   String   @default("lower_is_better") // "lower_is_better" | "higher_is_better"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, kpiKey])
  @@index([tenantId])
  @@map("kpi_thresholds")
}

model MaturityScore {
  id                    String         @id @default(uuid())
  tenantId              String
  domain                MaturityDomain
  month                 DateTime       // first day of month
  score                 Float          // 0-100
  details               Json?          // breakdown details
  createdAt             DateTime       @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, domain, month])
  @@index([tenantId, month])
  @@map("maturity_scores")
}

model BoardExportRun {
  id              String       @id @default(uuid())
  tenantId        String
  exportType      String       // "board_report" | "audit_pack" | "quarterly_kpi"
  format          ReportFormat @default(PDF)
  status          ReportStatus @default(PENDING)
  dateRangeStart  DateTime
  dateRangeEnd    DateTime
  storageKey      String?
  fileSize        Int?
  errorMessage    String?
  metadata        Json?
  createdByUserId String
  createdAt       DateTime     @default(now())
  completedAt     DateTime?

  tenant    Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdBy User   @relation("BoardExportCreatedBy", fields: [createdByUserId], references: [id])

  @@index([tenantId])
  @@map("board_export_runs")
}

model ForecastModel {
  id              String   @id @default(uuid())
  tenantId        String
  modelType       String   // "dsar_volume" | "sla_breach" | "incident_surge"
  parameters      Json?    // { slope, intercept, r_squared, ... }
  lastTrainedAt   DateTime @default(now())
  forecastData    Json?    // { predictions: [...] }
  createdAt       DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, modelType])
  @@index([tenantId])
  @@map("forecast_models")
}

// ─── DSAR Workflow: Case Items & Audit Events ────────────────────────────

enum CaseItemDecision {
  PROPOSED
  INCLUDED
  EXCLUDED
}

model DsarCaseItem {
  id              String           @id @default(uuid())
  tenantId        String
  caseId          String
  findingId       String?
  evidenceId      String?
  systemId        String?
  assetType       String           // "finding" | "evidence"
  title           String
  location        String?
  dataCategory    String?
  riskScore       Int?
  decision        CaseItemDecision @default(PROPOSED)
  decisionReason  String?
  decidedByUserId String?
  decidedAt       DateTime?
  matchScore      Float?           // Relevance to data subject identifiers
  matchDetails    Json?            // Which identifiers matched
  createdAt       DateTime         @default(now())

  tenant    Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case      DSARCase      @relation(fields: [caseId], references: [id], onDelete: Cascade)
  finding   Finding?      @relation("CaseItemFinding", fields: [findingId], references: [id])
  evidence  EvidenceItem? @relation("CaseItemEvidence", fields: [evidenceId], references: [id])
  system    System?       @relation("CaseItemSystem", fields: [systemId], references: [id])
  decidedBy User?         @relation("CaseItemDecidedBy", fields: [decidedByUserId], references: [id])

  @@index([tenantId, caseId])
  @@map("dsar_case_items")
}

model DsarAuditEvent {
  id          String   @id @default(uuid())
  tenantId    String
  caseId      String
  actorUserId String?
  action      String
  entityType  String?
  entityId    String?
  details     Json?
  ip          String?
  userAgent   String?
  createdAt   DateTime @default(now())

  tenant Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case   DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  actor  User?    @relation("DsarAuditActor", fields: [actorUserId], references: [id])

  @@index([tenantId, caseId])
  @@map("dsar_audit_events")
}
