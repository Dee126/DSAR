model LegalReview {
  id                String            @id @default(uuid())
  tenantId          String
  caseId            String
  status            LegalReviewStatus @default(PENDING)
  issues            String?
  exemptionsApplied Json?
  redactions        String?
  notes             String?
  reviewerUserId    String?
  approvedAt        DateTime?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case     DSARCase @relation(fields: [caseId], references: [id], onDelete: Cascade)
  reviewer User?    @relation("LegalReviewReviewer", fields: [reviewerUserId], references: [id])

  @@index([tenantId, caseId])
  @@map("legal_reviews")
}

model Integration {
  id                 String                  @id @default(uuid())
  tenantId           String
  provider           IntegrationProvider
  name               String
  status             IntegrationStatus       @default(DISABLED)
  config             Json?
  secretRef          String?
  healthStatus       IntegrationHealthStatus @default(NOT_CONFIGURED)
  lastHealthCheckAt  DateTime?
  lastSuccessAt      DateTime?
  lastError          String?
  ownerUserId        String?
  createdAt          DateTime                @default(now())
  updatedAt          DateTime                @updatedAt

  tenant              Tenant               @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  owner               User?                @relation("IntegrationOwner", fields: [ownerUserId], references: [id])
  dataCollectionItems DataCollectionItem[]
  copilotQueries      CopilotQuery[]
  evidenceItems       EvidenceItem[]      @relation("EvidenceIntegration")

  @@index([tenantId])
  @@index([tenantId, status])
  @@map("integrations")
}

// ─── Privacy Copilot Models ──────────────────────────────────────────────────

model CopilotRun {
  id                      String              @id @default(uuid())
  tenantId                String
  caseId                  String
  createdByUserId         String
  status                  CopilotRunStatus    @default(DRAFT)
  justification           String              // Mandatory reason (e.g. "DSAR Art. 15 request – …")
  scopeSummary            String?             // Human-readable scope (e.g. "M365 Mailbox + SharePoint Finance Site")
  providerSelection       Json?               // JSON array: which integrations/workloads are included
  resultSummary           String?             // Short summary text (evidence-based, later LLM-assisted)
  errorDetails            String?             // Error info if FAILED
  containsSpecialCategory Boolean             @default(false)
  legalApprovalStatus     LegalApprovalStatus @default(NOT_REQUIRED)
  legalApprovedByUserId   String?
  legalApprovedAt         DateTime?
  retentionDeleteAt       DateTime?           // Auto-delete timestamp based on tenant settings
  totalFindings           Int                 @default(0)
  totalEvidenceItems      Int                 @default(0)
  startedAt               DateTime?
  completedAt             DateTime?
  metadata                Json?
  createdAt               DateTime            @default(now())
  updatedAt               DateTime            @updatedAt

  tenant          Tenant             @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  case            DSARCase           @relation(fields: [caseId], references: [id], onDelete: Cascade)
  createdBy       User               @relation("CopilotRunCreatedBy", fields: [createdByUserId], references: [id])
  legalApprovedBy User?              @relation("CopilotRunLegalApprover", fields: [legalApprovedByUserId], references: [id])
